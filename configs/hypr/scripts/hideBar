function hide() {
    pkill -f "bash $HOME/.config/waybar/launch.sh"
}

function unhide() {
    bash $HOME/.config/waybar/launch.sh
}

case $1 in
    -h | --hide | hide)
        hide
        exit;;
    -u | --unhide | unhide)
        unhide
        exit;;
    *)
        echo "Error: Invalid option"
        exit;;
esac
