#!/usr/bin/env bash

infocenter(){
FILE="$HOME/.cache/eww_nelly.dashboard"

if [[ ! -f "$FILE" ]]; then
	touch "$FILE"
	eww --config $HOME/.config/bspwm/rices/nelly/dashboard open dashboard
else
	eww --config $HOME/.config/bspwm/rices/nelly/dashboard close dashboard
	rm "$FILE"
fi
}

calendar(){
LOCK_FILE="$HOME/.cache/eww-nelly-calendar.lock"

if [[ ! -f "$LOCK_FILE" ]]; then
    touch "$LOCK_FILE"
    eww -c $HOME/.config/bspwm/rices/nelly/bar open calendar
else
    eww -c $HOME/.config/bspwm/rices/nelly/bar close calendar
    rm "$LOCK_FILE"
fi
}

case "$1" in
  --infocenter)
	infocenter;;
  --calendar)
	calendar;;
esac
